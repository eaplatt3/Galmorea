<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalmoreasLoginPage">

    <TextView
        android:id="@+id/title_spacer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:fontFamily="@font/pixel"
        android:textColor="#000000"
        android:text="@string/app_name"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/title_spacer"/>

    <TextView
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <EditText
        android:id="@+id/login_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/login_box"
        app:layout_constraintTop_toBottomOf="@+id/spacer"/>

    <TextView
        android:id="@+id/spacer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/login_box"/>

    <EditText
        android:id="@+id/password_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/password_box"
        app:layout_constraintTop_toBottomOf="@+id/spacer1"/>

    <TextView
        android:id="@+id/spacer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/password_box"/>

    <TextView
        android:id="@+id/reg_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:fontFamily="@font/pixel"
        android:textColor="#000000"
        android:text="@string/reg_link"
        app:layout_constraintTop_toBottomOf="@+id/spacer2"/>

    <TextView
        android:id="@+id/spacer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_link"/>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pixel"
        android:textColor="#000000"
        android:text="@string/login"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/spacer3" />

    <ImageView
        android:id="@+id/imageshadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingStart="45dp"
        android:paddingBottom="15dp"
        android:scaleX="2.25"
        android:scaleY="2.25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/player_shadow" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="3"
        android:scaleX="3"
        android:paddingStart="40dp"
        android:paddingTop="22dp"
        app:srcCompat="@drawable/login_idle"
        app:layout_constraintTop_toBottomOf="@id/spacer3"/>




</android.support.constraint.ConstraintLayout>